<!-- heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<div class="form">
   <%- messages() %> <% if (errors) { %>
   <ul class="notice">
      <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
      <% }) %>
   </ul>
   <% } %>
   <form action="/account/update" method="post">
      <label for="account_firstname">First Name:</label>
      <input
         type="text"
         id="account_firstname"
         name="account_firstname"
         value="<%=account.account_firstname %>"
         required
      />
      <label for="account_lastname">Last Name:</label>
      <input
         type="text"
         id="account_lastname"
         name="account_lastname"
         value="<%=account.account_lastname %>"
         required
      />
      <label for="account_email">Email:</label>
      <input
         type="email"
         id="account_email"
         name="account_email"
         required
         value="<%=account.account_email %>"
      />

      <input type="submit" class="btn-main" value="Update" />
      <input type="hidden" name="account_id"
      <% if(locals.account_id) {  %> value="<%= locals.accounts_id %>"
      <% } %>>
   </form>

   <form action="/account/change-password" method="post">
      <label for="account_password">Change Password:</label>
      <span
         >Passwords must be at least 12 characters and contain at least 1
         number, 1 capital letter and 1 special character</span
      >
      <input
         type="password"
         id="account_password"
         name="account_password"
         minlength="12"
         pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
         required
         value="<%=account.account_password %>"
      />
      <input type="submit" class="btn-main" value="Change Password" />
      <input type="hidden" name="account_id"
      <% if(locals.account_id) {  %> value="<%= locals.accounts_id %>"
      <% } %>>
   </form>
</div>
