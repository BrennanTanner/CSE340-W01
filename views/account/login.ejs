<!-- heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Message Block -->
<%# messages() %>

<div class="form">
  <%- messages() %>
   <form  action="/account/login" method="post">

      <label for="email">Email:</label>
      <input
         type="email"
         id="email"
         name="email"
         required

      />

      <label for="password">Password:</label>
      <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
      <input
         type="password"
         id="password"
         name="password"
         minlength="12"
         pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
         required
      />

      <input type="submit" class="btn-main" value="Login" />
   </form>

   <p>No account? <a href="/account/register">Sign-up</a></p>
</div>
